<Project>
    <PropertyGroup>
        <!-- This applies the version number to all projects under this folder. -->
        <VersionPrefix>1.2.1</VersionPrefix>
        
        <!-- This suffix is used for all builds except for release builds performed by Azure DevOps -->
        <VersionSuffix>prerelease</VersionSuffix>

        <TargetFramework>netstandard2.0</TargetFramework>
        <Authors>c-owens</Authors>

        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>
</Project>